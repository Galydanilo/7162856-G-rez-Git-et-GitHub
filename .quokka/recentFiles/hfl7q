let c = 1;

while( c <= 10) {
  c++;
  if(c == 8) {
    break;
  }
  console.log("le nombre est un " + c)
}

let Marq = ["BMW", "Peugeot", "Audi", "Renault"];

for(Mark of Marq) {
  console.log("La voiture est une " + Mark);
  if(Mark == "Peugeot" || Mark == "Renault") {
    continue;
  }
  console.log("C'est une marque de luxe")
}


