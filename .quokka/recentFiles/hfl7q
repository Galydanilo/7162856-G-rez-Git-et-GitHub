const list = [24, 67, 18];

let compteur3 = 1;

let resultats = "";

for(nB of list) {
 resultats = "Multiples de " + nB + ":";
 for(compteur3; compteur3 <= nB; compteur3++) {
  if(nB % compteur3 == 0) {
    resultats += compteur3 + ", ";
  }
 }
 resultats += "\n \n"
}
 

console.log(resultats);